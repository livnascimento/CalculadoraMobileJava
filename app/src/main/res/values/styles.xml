<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Container_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0.7dp</item>
        <item name="android:background">@drawable/button_number_pressed</item>
    </style>

    <style name="Operator_Button" parent="Container_Button">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Clear_Button" parent="Container_Button">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Number_Button" parent="Container_Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>